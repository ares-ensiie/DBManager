= form_for @database, html: { class: "form form-horizontal database" } do |f|
  .form-group
    = f.label :name, "Nom", class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :type, "Type", class: 'control-label col-lg-2'
    .col-lg-10
      = f.select :type, Database.types.keys, {},  class: 'form-control', required: true
    = f.error_span(:type)
  .form-group
    .col-lg-offset-2.col-lg-10
