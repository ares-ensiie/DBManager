- model_class = Database
.page-header
  %h1 Mes bases de données
%table.table.table-striped
  %thead
    %tr
      %th Nom
      %th Type
      %th Administrateur
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @databases.each do |database|
      %tr
        %td= database.name
        %td= database.type
        %td= database.user
        %td
          = link_to "Infos", database_path(database), :class => 'btn btn-success btn-xs'
          = link_to "Supprimer", database_path(database), :method => :delete, :data => { :confirm => "Êtes vous sur de vouloir supprimer cette base de données ?"}, :class => 'btn btn-xs btn-danger'

= link_to "Créer une base de données", new_database_path, :class => 'btn btn-primary'
